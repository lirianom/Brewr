<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.richardje1.brewr">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomePageActivity"
            android:label="@string/title_activity_home_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BrewListActivity"
            android:label="BrewListActivity" />
        <activity
            android:name=".BrewActivity"
            android:label="BrewActivity" />
        <activity
            android:name=".CreateUser"
            android:label="CreateUser"
            />
        <activity
            android:name=".CreateBrew"
            android:label="CreateUser"
            />
        <activity
            android:name=".CreateComment"
            android:label="CreateComment"/>
        <activity android:name=".AddFriend"
            android:label="AddFriend"/>
    </application>

</manifest>